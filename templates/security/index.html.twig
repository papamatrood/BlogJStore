{% extends 'base.html.twig' %}

{% block title %}Hello SecurityController!{% endblock %}

{% block body %}

<div class="example-wrapper">
    <h1>{{ controller_name }}! ✅</h1>

    {{ form_start(form) }}

        {{ form_row(form.username, {'label' : "Nom d'utilisateur", 'attr' : {
            'placeholder' : "Votre nom d'utilisateur ..."
        }}) }}
        {{ form_row(form.firstname, {'label' : "Prénom", 'attr' : {
            'placeholder' : "Votre Prénom ..."
        }}) }}
        {{ form_row(form.lastname, {'label' : "Nom", 'attr' : {
            'placeholder' : "Votre Nom  ..."
        }}) }}
        {{ form_row(form.email, {'label' : "Email", 'attr' : {
            'placeholder' : "Votre email ..."
        }}) }}
        {{ form_row(form.password, {'label' : "Mot de passe", 'attr' : {
            'placeholder' : "Votre Mot de passe ..."
        }}) }}
        {{ form_row(form.passwordConfirm, {'label' : "Confirmation mot de passe", 'attr' : {
            'placeholder' : "Confirmer votre mot de passe ..."
        }}) }}

        <button type="submit" class="btn btn-success">S'inscrire</button>

    {{ form_end(form) }}
   
</div>
{% endblock %}
