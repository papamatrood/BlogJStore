{% extends "base.html.twig" %}


{% block body %}
<div class="container">  
    <h1 class="title p-1">{{ article.title }}</h1>
    <div class="img-fluid">
        <img width="100%" src="{{ article.image }}" alt="{{ article.title }}" />
    </div>
    <div class="content">
        <p class="date">Ecrit le {{ article.createdAt | date("d/m/Y)") }}</p>
        <p class="content text-justify">
            {{ article.content }}
        </p>
    </div>
</div>
{% endblock %}